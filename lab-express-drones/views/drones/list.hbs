<div class="main"><h2>Available drones</h2>
  <a href="/drones">See our drones</a>
  <br />
  <a href="/drones/create">Create a new drone</a>
</div>
{{#each drones}}
  <div>
    <h5>{{name}}</h5>
    <img src="/images/Quadcopter-Dron-PNG-Images-HD.png" />
    <a href="/drones/{{_id}}">See details</a>
    <br />
    <a href="/drones/{{_id}}/edit">Edit details</a>
    <form action="/drones/{{_id}}/delete" method="post"><button
        type="submit"
      >Delete it!</button></form>

  </div>

{{/each}}